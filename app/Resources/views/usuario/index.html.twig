{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Usuarios</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Password</th>
                <th>Codigo Equipo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.password }}</td>
                <td> <a href="{{ path('equipo_edit', { 'id': usuario.equipo.id }) }}">{{ usuario.equipo.cpu.codigo }}</a></td>
                
                <td>
                    <ul>
                        <li value="Guardar" class="btn boton_crear" >
                            <a href="{{ path('usuario_show', { 'id': usuario.id }) }}">Ver</a>
                        </li>
                        <li value="Guardar" class="btn boton_crear" >
                            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn boton_crear" href="{{ path('usuario_new') }}">Crear Nuevo</a>
        </li>
    </ul>
{% endblock %}
