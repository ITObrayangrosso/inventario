{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mouse</h1>

    <table>
        <tbody>
            <tr>
                <th>Marca</th>
                <td>{{ mouse.marca }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ mouse.serial }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ mouse.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mouse_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mouse_edit', { 'id': mouse.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
