{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Mouses</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Marca</th>
                <th>Serial</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mouse in mice %}
            <tr>
                <td><a href="{{ path('mouse_show', { 'id': mouse.id }) }}">{{ mouse.marca }}</a></td>
                <td>{{ mouse.serial }}</td>
                <td>{{ mouse.id }}</td>
                <td>
                    <ul>
                        <li  class="btn boton_crear">
                            <a href="{{ path('mouse_show', { 'id': mouse.id }) }}">Ver</a>
                        </li>
                        <li  class="btn boton_crear">
                            <a href="{{ path('mouse_edit', { 'id': mouse.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a  class="btn boton_crear" href="{{ path('mouse_new') }}">Crear Nuevo</a>
{% endblock %}
