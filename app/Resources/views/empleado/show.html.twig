{% extends 'base.html.twig' %}

{% block body %}
    <h1>Empleado</h1>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Nombres</th>
                <td>{{ empleado.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ empleado.apellidos }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ empleado.correo }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn boton_crear" href="{{ path('empleado_edit', { 'id': empleado.id }) }}">Editar</a>
    <a href="{{ path('empleado_index') }}">Volver a la lista</a>
{% endblock %}
