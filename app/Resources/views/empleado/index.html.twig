{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de empleados</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empleado in empleados %}
            <tr>
                <td><a href="{{ path('empleado_show', { 'id': empleado.id }) }}">{{ empleado.nombres }}</a></td>
                <td>{{ empleado.apellidos }}</td>
                <td>{{ empleado.correo }}</td>
                <td>
                    <ul>
                        <li  class="glyphicon glyphicon-zoom-in btn boton_comun">
                            <a href="{{ path('empleado_show', { 'id': empleado.id }) }}">Ver</a>
                        </li>
                        <li class="glyphicon glyphicon-pencil btn boton_comun">
                            <a href="{{ path('empleado_edit', { 'id': empleado.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn boton_crear" href="{{ path('empleado_new') }}">Crear Nuevo</a>
{% endblock %}
