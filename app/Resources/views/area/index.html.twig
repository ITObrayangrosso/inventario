{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de √Åreas </h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for area in areas %}
            <tr>
                <td><a href="{{ path('area_show', { 'id': area.id }) }}">{{ area.nombre }}</a></td>
                <td>
                    <ul>
                        <li class="glyphicon glyphicon-eye-open btn boton_comun">                        
                            <a href="{{ path('area_show', { 'id': area.id }) }}">Ver</a>
                        </li>
                        <li class="glyphicon glyphicon-pencil btn boton_comun">
                            <a href="{{ path('area_edit', { 'id': area.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn boton_crear" href="{{ path('area_new') }}">Crear Nuevo</a>    
{% endblock %}
