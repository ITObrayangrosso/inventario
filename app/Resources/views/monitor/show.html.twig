{% extends 'base.html.twig' %}

{% block body %}
    <h1>Monitor</h1>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Marca</th>
                <td>{{ monitor.marca }}</td>
            </tr>
            <tr>
                <th>Modelo</th>
                <td>{{ monitor.modelo }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ monitor.serial }}</td>
            </tr>
            <tr>
                <th>Pulgadas</th>
                <td>{{ monitor.pulgadas }}</td>
            </tr>
            <tr>
                <th>Ocupado</th>
                <td>{% if monitor.ocupado %}Si{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn boton_crear" href="{{ path('monitor_edit', { 'id': monitor.id }) }}">Editar</a>
    <a href="{{ path('monitor_index') }}">Volver a la lista</a>      
{% endblock %}
